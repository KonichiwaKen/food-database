<html>
<style>
.chart div {
  font: 20px sans-serif;
  background-color: steelblue;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
}
</style>

<head>
  <title>SnackTrack</title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="http://d3js.org/d3.v3.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">SnackTrack</a>
    </div>

    <div class="collapse navbar-collapse" id="navbar" ng-controller="HeaderCtrl">
      <ul class="nav navbar-nav">
        <li ng-class="{ active: isActive('/home')}"><a href="#">Home</a></li>
        <li ng-class="{ active: isActive('/dataInput')}"><a href="#/dataInput">Food input</a></li>
        <li ng-class="{ active: isActive('/trends')}"><a href="#/trends">Trends</a></li>
      </ul>
    </div>
  </div>
</nav>

<body ng-app="snackTrack">
	<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
      <br></br>
    </div>
  </div>

  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Food point calculator</h1>
    </div>

    <form ng-submit="getValidFoods()" style="margin-top:30px;">
      <h3>Enter your food point balance</h3>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Netid" ng-model="netid"></input>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" placeholder="Food point balance" ng-model="balance"></input>
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default">Eat</button>
            </span>
          </div>
        </div>
      </div>
    </form>

    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr ng-if="validFoodItems.length != 0">
          <th>Food</th>
          <th>Price</th>
          <th>Location</th>
          <th>Eat !</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="food in validFoodItems | orderBy:reverse: '-cost'">
          <td class="col-md-4">
            <a href="http://www.google.com/#q={{food.name}}" Title="Search {{food.name}}" target="_blank">
              {{food.name}}
            </a>
          </td>
          <td class="col-md-4">${{food.cost}}</td>
          <td class="col-md-4">{{food.restaurant}}</td>
          <td class="col-md-1 text-center">
            <button type="button" class="btn btn-default btn-xs" ng-click="addTransaction(food._id, food.restaurant)">
              <span class="glyphicon glyphicon-cutlery"></span>
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </script>

  <script type="text/ng-template" id="/dataInput.html">
    <div class="page-header">
      <h1>Food input</h1>
    </div>

    <form ng-submit="addFood()" style="margin-top:30px;">
      <h3>Enter food item</h3>
      <div class="row">
        <div class="col-lg-5">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Food name" ng-model="foodName"></input>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" placeholder="Cost" ng-model="foodCost"></input>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Restaurant" ng-model="restaurant"></input>
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default">Submit</button>
            </span>
          </div>
        </div>
      </div>
    </form>

    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Food</th>
          <th>Price</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="food in foodItems | orderBy:reverse: '-cost'">
          <td class="col-md-4">{{food.name}}</td>
          <td class="col-md-4">${{food.cost}}</td>
          <td class="col-md-4">{{food.restaurant}}</td>
        </tr>
      </tbody>
    </table>
  </script>

  <script type="text/ng-template" id="/trends.html">
    <div class="page-header">
      <h1>Trends</h1>
    </div>

    <button type="button" class="btn btn-default" ng-click="foodTrends()">Food trends</button>
    <br></br>
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
        Restaurants
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
        <li role="presentation" ng-repeat="restaurant in restaurants"><a role="menuitem" tabindex="-1" ng-click="restaurantTrends(restaurant)">{{restaurant}}</a></li>
      </ul>
    </div>
    <br></br>
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr ng-if="trends.length != 0">
          <th>Food</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="trend in trends | orderBy: '-count'">
          <td class="col-md-3">{{trend.name}}</td>
          <td class="col-md-3">{{trend.count}}</td>
        </tr>
      </tbody>
    </table>

    <div class="chart" ng-repeat="trend in trends | orderBy: '-count'">
      <div style="width: {{trend.average}}px;">{{trend.name}}</div>
    </div>

